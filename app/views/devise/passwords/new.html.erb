<div class="bg-white shadow-2xl rounded-lg mx-auto mt-6 p-8 w-600 max-w-5xl border border-gray-300">

<h2 class="text-2xl font-semibold text-gray-700 mb-6">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mt-6">
    <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "mt-4 text-center" %>
</div>
