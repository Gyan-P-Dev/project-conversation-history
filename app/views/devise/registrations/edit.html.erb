<div class="bg-white shadow-2xl rounded-lg mx-auto mt-6 p-8 w-600 max-w-5xl border border-gray-300">
  <h2 class="text-2xl font-semibold text-gray-700 mb-6">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-yellow-500 mt-2">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-medium" %> 
      <i class="text-sm text-gray-500">(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @minimum_password_length %>
        <div class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "block text-gray-700 font-medium" %> 
      <i class="text-sm text-gray-500">(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Update", class: "w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold text-gray-700 mt-8">Cancel my account</h3>

  <div class="mt-4">
    <p class="text-gray-700">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:text-red-700 focus:outline-none" %></p>
  </div>

  <%= link_to "Back", :back, class: "mt-4 text-blue-500 hover:text-blue-700" %>
</div>
